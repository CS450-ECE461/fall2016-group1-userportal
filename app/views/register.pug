doctype html
html(lang="en")
    head
        title Login

        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")

    body
        div.container
            h1 Register

            h3 Fields with a star are required.
            form.form-horizontal(method='post', action='/register')
                div.form-group
                  label.col-sm-2.control-label(for="username") Username*
                  div.col-sm-10
                      input#email.form-control(type="text", name="username" required)
                div.form-group
                    label.col-sm-2.control-label(for="firstName") First Name*
                    div.col-sm-10
                        input#email.form-control(type="text", name="lastName" required)
                div.form-group
                    label.col-sm-2.control-label(for="middleName") Middle Name
                    div.col-sm-10
                        input#email.form-control(type="text", name="middleName")
                div.form-group
                    label.col-sm-2.control-label(for="lastName") Last Name*
                    div.col-sm-10
                        input#email.form-control(type="text", name="lastName" required)
                div.form-group
                    label.col-sm-2.control-label(for="emailAddress") Email*
                    div.col-sm-10
                        input#email.form-control(type="email", name="emailAddress" required)
                div.form-group
                    label.col-sm-2.control-label(for="password") Password*
                    div.col-sm-10
                        input#password.form-control(type="password", name="password")
                div.form-group
                    label.col-sm-2.control-label(for="confirmPassword") Confirm Password*
                    div.col-sm-10
                        input#password.form-control(type="password", name="confirmPassword")

                div.form-group
                    div.col-sm-offset-2.col-sm-10
                        button.btn.btn-default(type="submit") Submit

            a(href='/home') Home
            br
            a(href='/login') Login
